@model CommissionAPITestingTool.Models.CommissionRequest

@{
    ViewBag.Title = "Commission Value Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#result").dialog({
                autoOpen: false,
                title: 'Commission Detail',
                width: 500,
                draggable: true,
                height: 'auto',
                modal: false,
                buttons: {
                    Close: function () {
                        $(this).dialog('close');
                    }
                }
            });
        });

        function openPopup() {
            $("#result").dialog("open");
        }
    </script>
}



